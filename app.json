{
  "expo": {
    "name": "Say It",
    "slug": "say-it",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "sayit",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "description": "The anonymous party game where you say it without filters. Best played with 6-10 friends. 18+ only.",
    "primaryColor": "#007AFF",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.sayit.app",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to let you share images in Drop It mode.",
        "NSCameraUsageDescription": "This app needs access to your camera to let you take photos for Drop It mode.",
        "GADApplicationIdentifier": "ca-app-pub-3372982708744613~4273860221"
      },
      "config": {
        "googleMobileAdsAppId": "ca-app-pub-3372982708744613~4273860221"
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.sayit.app",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "READ_MEDIA_IMAGES"
      ],
      "config": {
        "googleMobileAdsAppId": "ca-app-pub-3940256099942544~3347511713"
      }
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "react-native-google-mobile-ads",
        {
          "androidAppId": "ca-app-pub-3940256099942544~3347511713",
          "iosAppId": "ca-app-pub-3372982708744613~4273860221"
        }
      ],
      "expo-secure-store",
      [
        "expo-image-picker",
        {
          "photosPermission": "This app needs access to your photos to let you share images in Drop It mode.",
          "cameraPermission": "This app needs access to your camera to let you take photos for Drop It mode."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "ageRating": "18+",
      "contentRating": "Mature 17+"
    }
  }
}
